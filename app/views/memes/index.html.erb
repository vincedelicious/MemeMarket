<div class="container container-index">
  <article>
    <h1 class="h1-index mt-5">MemeMarket</h1>
    <p class="mb-5 small">What tickles your pickle?</p>
  </article>
  <div class="container container-index-search">
    <%= form_with url: memes_path, method: :get, class: "d-flex rounded-lg" do %>
      <%= text_field_tag :query,
    params[:query],
    class: "form-control search-bar ms-5",
    placeholder: "Find a meme"%>
      <%= submit_tag "Search", class: "btn ms-2 purple" %>
    <% end %>
  </div>
  <div class="container m-0 pt-0 ps-3 pe-3 container-index1">
    <div class="row">
      <% @memes.each do |meme| %>
        <a class="links" href="/memes/<%= meme.id %>">
          <div class="d-flex postcard rounded light blue">
            <%= cl_image_tag meme.photo.key %>
            <div class="postcard__text t-dark">
              <div class="postcard__subtitle small">
                <h1 class="postcard__title"><%= meme.title %></h1>
              </div>
              <div class="postcard__bar"></div>
              <div class="postcard__body">
                <i class="fa-solid fa-dollar-sign large"></i> <%= meme.price %>
              </div>
            </div>
            <div class="ribbon"><span class="ribbon__content"><%= meme.category %></span></div>
          </div>
        </a>
      <% end %>
    </div>
  </div>
</div>
</div>
